{% extends 'layout.njk' %}
    
    {% block content %}

        <main>
            <div class="">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
                <h1>{{recipe.title}}</h1>
                <p>{{recipe.author}}</p>
            </div>
            <article>
                <h2>Ingredientes</h2>
                <ul>
                    {% for ingredient in recipe.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>

                <h2>Modo de preparo</h2>
                <p>{{recipe.preparation}}</p>

                <h2>Informações adicionais</h2>
                <p>{{recipe.information}}</p>

            </article>
        </main>
    {% endblock content %}